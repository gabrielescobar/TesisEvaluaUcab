{# empty Twig template #}
{% extends '::base.html.twig'%}
{% set isProfesor = false %}
{% block title %}Solicitudes{% endblock %}

{% block stylesheets %}
<link href="{{ asset('bundles/estudiante/css/normalize.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/estudiante/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/application/css/headerAndFooter.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/application/css/menuPortafolioEstudiante.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/estudiante/css/solicitud.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block body %}


{% include '::header.html.twig' %}
{% include 'EstudianteBundle:Default:navEstudiante.html.twig' %}

{% for flashMessage in app.session.flashbag.get('notice') %}
<div id="myAlert" class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">x</span><span class="sr-only"></span></button>
    <strong>{{ flashMessage }}</strong> 
</div>
{% endfor %}

<form method="link" action=" {{path('solicitar_acceso')}} " > 
    <button id ="bCrearSolicitud" type="submit" class="btn btn-danger" >Solicitar Acceso </button>
</form>

<section id="seccionSolicitudes">
    <h2>Solicitudes de acceso pendientes</h2>
    <hr style="border: 0; height: 5px; box-shadow: inset 0 12px 12px -12px #1ea3e1;">

    <ul id="listaSolicitudes">
{% for solicitud in pagination %}
{# ... #}
            <li><a  >{{solicitud.seccion.materia.nombre}} - {{solicitud.seccion.codigo}} </a></li>
            <hr style="margin-left: -2.8em">
{% endfor %}

        </ul>

        <div id="pagSolicitudes" class="navigation">
           {{ knp_pagination_render(pagination) }}
        </div>

        </section>

{% endblock %} 



{% block javascripts %}
        <script src="{{ asset('bundles/estudiante/js/jquery2.1.1.js') }}"></script>
        <script src="{{ asset('bundles/estudiante/js/bootstrap.js') }}"></script>
{% endblock %}




