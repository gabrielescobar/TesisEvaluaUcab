{% extends '::base.html.twig'%}

{% block title %}Cambiar Contraseña{% endblock %}

{% block stylesheets %}

<link href="{{ asset('bundles/estudiante/css/normalize.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/estudiante/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />

<link href="{{ asset('bundles/application/css/cssIndex.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}

{% set locale = app.request.locale %}

<h1>Bienvenido </h1>
{% for flashMessage in app.session.flashbag.get('warning') %}
    <div id="myAlert" class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">x</span><span class="sr-only"></span></button>
          <strong>{{ flashMessage }}</strong> 
    </div>
{% endfor %}
<section id="seccion">
    <img id ="logo" src="{{asset('bundles/application/images/bigLogo.png')}}"/>

    <h2>Cambiar Contraseña</h2>
    <form action="{{ path('cambiar_password') }}" method="post">
            <input id="email" title="Introduzca su e-mail" type="email" name="email" placeholder="Email" class="input"  required /><br>
            <input type="submit" value="Enviar" class="btn btn btn-success" style="margin-left: 5em; margin-top: 1em;" />
      
    </form>
    </section>
   {% endblock %}         
{% block javascripts %}
    <script src="{{ asset('bundles/estudiante/js/jquery2.1.1.js') }}"></script>
    <script src="{{ asset('bundles/estudiante/js/bootstrap.js') }}"></script>
{% endblock %}
